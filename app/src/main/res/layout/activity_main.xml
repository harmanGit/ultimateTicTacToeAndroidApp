<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs345.harmanjeetdhillon.ultimatetictactoe.MainActivity"
    android:background="@color/colorBackDrop">

    <LinearLayout
        android:id="@+id/mainActLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ultimate Tic Tac Toe!"
            android:textAlignment="center"
            android:textSize="75dp" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/selectedBoard"
                android:onClick="playGameButtonClicked"
                android:text="Play Game!"
                android:textColor="@color/colorAccent"
                android:textSize="50dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/highScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/selectedBoard"
                android:text="High Score!"
                android:textColor="@color/colorAccent"
                android:textSize="50dp"
                android:textStyle="italic"
                android:onClick="highScoreButtonClicked"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
